
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
     <link rel="stylesheet" type="text/css" href="{{ asset('css/custom.css') }}">
{% endblock %}

{% block body %}

    <div>
        <div class="main-left-div">
            <h2>Movie World</h2>
        </div>



        {% if users is defined %}

            {% for user in users %}
                {% for movie in user.getMovies %}
                <div class="movie-div">
                <span class="movie-title">{{ movie.getTitle }}
                </span>
                    <br>

                <span class="movie-desc">{{ movie.getDescr }}
                </span>
                    <br>
                    <span>Publication date {{ movie.getDatePosted }}</span>
                    <span>Posted by {{ user.getFirstName }} {{ user.getLastName }}</span>
                </div>
                <br>
            {% endfor %}
            {% endfor %}
        </div>
            {% else %}
            <div class="no-movie-div">
                <span class="no-movie-span">No movies found</span>
            </div>
        {% endif %}
        <div class="main-right-div">
            <button type="button" class="btn btn-primary"><a href="{{ path('login_user') }}" style="text-decoration:none;color:white">Login</a></button>
            <button type="button" class="btn btn-primary"><a href="{{ path('register_user') }}" style="text-decoration:none;color:white">Sign up</a></button>

        </div>
    </div>

{% endblock %}